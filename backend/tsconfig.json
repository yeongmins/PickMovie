// backend/tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true
  },

  // ✅ prisma.config.ts 추가
  "include": [
    "src/**/*.ts",
    "src/generated/prisma/**/*.ts",
    "prisma.config.ts"
  ],

  "exclude": ["node_modules", "dist"]
}
